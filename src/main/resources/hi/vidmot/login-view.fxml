<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="dialogPane"
            styleClass="dialog"
            prefWidth="400.0"
            prefHeight="200.0">
    <header>
        <Label text="Innskráningar Gluggi" styleClass="dialog-header" />
    </header>
    <content>
        <GridPane hgap="10" vgap="10" padding="10">
            <Label text="Notendanafn:" />
            <TextField fx:id="usernameField" />
            <Label text="Lykilorð:" />
            <PasswordField fx:id="passwordField" />
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType text="Í lagi" />
        <ButtonType text="Hætta við" />
    </buttonTypes>
</DialogPane>
